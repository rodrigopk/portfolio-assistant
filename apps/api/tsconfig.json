{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/routes/*": ["./routes/*"],
      "@/middleware/*": ["./middleware/*"],
      "@/services/*": ["./services/*"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "references": [{ "path": "../../packages/database" }, { "path": "../../packages/agents" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "**/__tests__/**", "**/*.test.ts"]
}
