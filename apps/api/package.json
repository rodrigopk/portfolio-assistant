  "dependencies": {
    "@mastra/core": "^0.1.0",
    "@mastra/anthropic": "^0.1.0",
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "redis": "^4.6.11",
    "bull": "^4.12.0",
    "ws": "^8.16.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
