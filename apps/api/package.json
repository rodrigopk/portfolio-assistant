{
  "name": "@devportfolio/api",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for DevPortfolio AI",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
